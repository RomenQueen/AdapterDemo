<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InputLeftTip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">@dimen/padding_200px</item>
        <item name="android:paddingTop">@dimen/padding_24px</item>
        <item name="android:paddingLeft">@dimen/padding_30px</item>
        <item name="android:paddingBottom">@dimen/padding_24px</item>
        <item name="android:textSize">@dimen/text_size_24px</item>
    </style>

    <style name="Input1AEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">@dimen/padding_200px</item>
        <item name="android:paddingTop">@dimen/padding_24px</item>
        <item name="android:paddingBottom">@dimen/padding_24px</item>
        <item name="android:textSize">@dimen/text_size_30px</item>
    </style>
</resources>
